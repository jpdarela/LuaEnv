# .gitattributes - Git line ending and file type configuration

# Set default behavior for all files
* text=auto

# Windows-specific files should have CRLF line endings
*.bat text eol=crlf
*.ps1 text eol=crlf

# Python files should have LF line endings (Python convention)
*.py text eol=lf

# Text files should have LF line endings (cross-platform)
*.txt text eol=lf
*.md text eol=lf
*.rst text eol=lf

# Special handling for specific files in this project
README.md text eol=lf
.gitignore text eol=lf
